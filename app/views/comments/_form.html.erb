<%= simple_form_for [topic, post, comment], wrapper: "bootstrap_horizontal", html: { class: 'form-horizontal' }, remote: true do |c| %>

  <% if comment.errors.any? %>
    <div class="alert alert-warning">
      <h4>There <%= comment.errors.count == 1 ? "is" : "are" %> <%= pluralize(comment.errors.count, "error") %>.</h4>
      <ul>
        <% comment.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= c.input :body, label: 'Comment', input_html: { rows: 8 } %>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= c.button :submit, 'Save', class: 'btn btn-primary' %>
    </div>
  </div>

<% end %>
